{
  "name": "create-express-rest-ts",
  "version": "2.0.0",
  "description": "Set up and build a Node.js REST API using Typescript, Express, Mongoose with a maintainable and scalable structure.",
  "main": "src/index.ts",
  "bin": "src/bin/index.js",
  "scripts": {
    "start": "cross-env NODE_ENV=production node build/index.js",
    "start:pm2": "pm2-runtime start ecosystem.config.js --env production",
    "build": "ts-node -p prod.tsconfig.json && tsc-alias",
    "dev": "ts-node-dev --cls -r tsconfig-paths/register --respawn --transpile-only src/index.ts",
    "dev:sync": "ts-node-dev --cls -r tsconfig-paths/register --respawn --transpile-only src/index.ts --trace-sync-io",
    "dev:pm2": "pm2 start ecosystem.config.js",
    "seed:admin": "ts-node -r tsconfig-paths/register src/seeders/seedAdmin.ts",
    "seed:users": "ts-node -r tsconfig-paths/register src/seeders/seedUsers.ts",
    "entity": "ts-node src/tasks/generateEntity.ts",
    "lint": "eslint .",
    "lint:fix": "yarn lint --fix",
    "test": "jest --verbose",
    "test:good": "jest src/__tests__/good.test.ts",
    "test:unit": "jest unit",
    "test:int": "jest int",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watch",
    "test:watchAll": "jest --watchAll",
    "kill": "pm2 kill",
    "monit": "pm2 monit",
    "prepare": "husky install"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "express-mongo-sanitize": "^2.2.0",
    "express-rate-limit": "^6.7.0",
    "helmet": "^6.0.1",
    "hpp": "^0.2.3",
    "inquirer": "^9.1.4",
    "joi": "^17.8.1",
    "jsonwebtoken": "^9.0.0",
    "mailgen": "^2.0.27",
    "mongoose": "^6.9.2",
    "morgan": "^1.10.0",
    "nodemailer": "^6.9.1",
    "pluralize": "^8.0.0",
    "pm2": "^5.2.2",
    "uuid": "^9.0.0",
    "winston": "^3.8.2"
  },
  "devDependencies": {
    "@swc/core": "^1.3.37",
    "@swc/helpers": "^0.4.14",
    "@types/bcryptjs": "^2.4.2",
    "@types/compression": "^1.7.2",
    "@types/cookie-parser": "^1.4.3",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.17",
    "@types/hpp": "^0.2.2",
    "@types/inquirer": "^9.0.3",
    "@types/jest": "^29.4.0",
    "@types/jsonwebtoken": "^9.0.1",
    "@types/morgan": "^1.9.4",
    "@types/node": "^20.2.3",
    "@types/nodemailer": "^6.4.7",
    "@types/pluralize": "^0.0.29",
    "@types/supertest": "^2.0.12",
    "@types/uuid": "^9.0.0",
    "@typescript-eslint/eslint-plugin": "^5.52.0",
    "@typescript-eslint/parser": "^5.0.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.34.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-typescript": "^17.0.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-import-resolver-typescript": "^3.5.3",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-jest": "^27.2.1",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-promise": "^6.1.1",
    "husky": "^8.0.3",
    "jest": "^29.4.3",
    "lint-staged": "^13.1.2",
    "prettier": "^2.8.4",
    "regenerator-runtime": "^0.13.11",
    "supertest": "^6.3.3",
    "ts-jest": "^29.0.5",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "tsc-alias": "^1.8.2",
    "tsconfig-paths": "^3.14.2",
    "typescript": "^4.9.5"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/KhomsiAdam/create-express-rest-ts.git"
  },
  "keywords": [
    "node",
    "express",
    "rest",
    "api",
    "typescript",
    "jwt",
    "accesstoken",
    "refreshtoken",
    "mongodb",
    "mongoose",
    "boilerplate"
  ],
  "author": "KhomsiAdam",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/KhomsiAdam/create-express-rest-ts/issues"
  },
  "homepage": "https://github.com/KhomsiAdam/create-express-rest-ts#readme"
}
