{
  "name": "create-express-rest-ts",
  "version": "2.0.0",
  "description": "Set up and build a Node.js REST API using Typescript, Express, Mongoose with a maintainable and scalable structure.",
  "main": "src/index.ts",
  "bin": "src/bin/index.js",
  "scripts": {
    "start": "cross-env NODE_ENV=production node build/index.js",
    "start:pm2": "pm2-runtime start ecosystem.config.js --env production",
    "build": "tsc -p prod.tsconfig.json && tsc-alias",
    "dev": "ts-node-dev --cls -r tsconfig-paths/register --respawn --transpile-only src/index.ts",
    "dev:sync": "ts-node-dev --cls -r tsconfig-paths/register --respawn --transpile-only src/index.ts --trace-sync-io",
    "dev:pm2": "pm2 start ecosystem.config.js",
    "seed:admin": "ts-node -r tsconfig-paths/register src/seeders/seedAdmin.ts",
    "seed:users": "ts-node -r tsconfig-paths/register src/seeders/seedUsers.ts",
    "entity": "ts-node src/tasks/generateEntity.ts",
    "lint": "eslint .",
    "lint:fix": "yarn lint --fix",
    "test": "jest",
    "test:good": "jest src/__tests__/good.test.ts",
    "test:unit": "jest unit",
    "test:int": "jest int",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watch",
    "test:watchAll": "jest --watchAll",
    "kill": "pm2 kill",
    "monit": "pm2 monit",
    "prepare": "husky install",
    "cz": "cz"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^16.0.0",
    "express": "^4.17.3",
    "express-mongo-sanitize": "^2.2.0",
    "express-rate-limit": "^6.3.0",
    "helmet": "^6.0.1",
    "hpp": "^0.2.3",
    "inquirer": "^8.2.2",
    "joi": "^17.6.0",
    "jsonwebtoken": "^9.0.0",
    "mailgen": "^2.0.19",
    "mongoose": "^6.5.2",
    "morgan": "^1.10.0",
    "nodemailer": "^6.7.2",
    "pluralize": "^8.0.0",
    "pm2": "^5.2.0",
    "uuid": "^8.3.2",
    "winston": "^3.6.0"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/compression": "^1.7.2",
    "@types/cookie-parser": "^1.4.2",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/hpp": "^0.2.2",
    "@types/inquirer": "^8.2.1",
    "@types/jest": "^27.4.1",
    "@types/jsonwebtoken": "^8.5.8",
    "@types/morgan": "^1.9.3",
    "@types/node": "^17.0.21",
    "@types/nodemailer": "^6.4.4",
    "@types/pluralize": "^0.0.29",
    "@types/supertest": "^2.0.12",
    "@types/uuid": "^8.3.4",
    "@typescript-eslint/eslint-plugin": "^5.13.0",
    "@typescript-eslint/parser": "^5.0.0",
    "commitizen": "^4.2.5",
    "cross-env": "^7.0.3",
    "cz-conventional-changelog": "3.3.0",
    "eslint": "^8.7.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-typescript": "^17.0.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-import-resolver-typescript": "^2.7.1",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-jest": "^26.1.4",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-promise": "^6.0.0",
    "husky": "^7.0.0",
    "jest": "^27.5.1",
    "lint-staged": "^12.4.0",
    "prettier": "^2.6.2",
    "supertest": "^6.2.1",
    "ts-jest": "^27.1.4",
    "ts-node": "^10.6.0",
    "ts-node-dev": "^2.0.0",
    "tsc-alias": "^1.6.5",
    "tsconfig-paths": "^3.14.1",
    "typescript": "^4.6.2"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/KhomsiAdam/create-express-rest-ts.git"
  },
  "keywords": [
    "node",
    "express",
    "rest",
    "api",
    "typescript",
    "jwt",
    "accesstoken",
    "refreshtoken",
    "mongodb",
    "mongoose",
    "boilerplate"
  ],
  "author": "KhomsiAdam",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/KhomsiAdam/create-express-rest-ts/issues"
  },
  "homepage": "https://github.com/KhomsiAdam/create-express-rest-ts#readme",
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
